# API Keys
FINNHUB_API_KEY=your_finnhub_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# API Endpoints
FINNHUB_ENDPOINT=https://finnhub.io/api/v1/stock/insider-transactions
TRADEFEEDS_ENDPOINT=https://api.tradefeeds.com/v1/insider-trades

# System Configuration
INITIAL_PORTFOLIO_VALUE=100000
UPDATE_INTERVAL_SECONDS=3600  # 1 hour
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, staging, production

# Trading Configuration
TRADING_MODE=paper  # paper, live
MAX_POSITION_SIZE=0.05  # 5% of portfolio
MAX_DAILY_TRADES=10
DAILY_DRAWDOWN_LIMIT=0.05  # 5%
STOP_LOSS_PERCENTAGE=0.02  # 2%

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring Configuration
PROMETHEUS_METRICS_PORT=8000
ENABLE_METRICS=true

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_URL=http://localhost:3000

# Alert Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#insider-mirror-alerts
ENABLE_SLACK_ALERTS=true

# Security Configuration
JWT_SECRET=your_jwt_secret_here
API_KEY_ROTATION_DAYS=30
ENCRYPTION_KEY=your_encryption_key_here

# Performance Configuration
CACHE_TIMEOUT=300  # 5 minutes
REQUEST_TIMEOUT=30  # 30 seconds
MAX_RETRIES=3
BACKOFF_FACTOR=2

# Report Configuration
REPORT_FORMAT=html  # html, csv
REPORT_RETENTION_DAYS=90
ENABLE_AUTOMATED_REPORTS=true
REPORT_SCHEDULE="0 0 * * *"  # Daily at midnight

# Development Configuration
DEBUG=false
TESTING=false
PROFILE_QUERIES=false
ENABLE_DEBUG_TOOLBAR=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=alerts@yourdomain.com

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_POSITION_TRACKING=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_AUTOMATED_TRADING=false  # Disabled by default for safety